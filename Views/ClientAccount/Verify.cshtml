@model TraSuaFireFox.Models.ViewModels.VerifyVM
@{
    ViewData["Title"] = "Xác thực tài khoản";
}

<div class="min-h-[60vh] flex items-center justify-center bg-gray-50 px-4">
    <div class="max-w-md w-full bg-white p-8 rounded-xl shadow-lg text-center">
        <i class="fa-solid fa-shield-halved text-5xl text-amber-500 mb-4"></i>
        <h2 class="text-2xl font-bold text-gray-800 mb-2">Xác Thực Tài Khoản</h2>
        <p class="text-gray-600 text-sm mb-6">
            Mã xác thực (OTP) đã được gửi đến <b>@Model.ContactInfo</b>. <br>
            (Vui lòng kiểm tra Console Output nếu đang chạy localhost)
        </p>

        <form action="/ClientAccount/Verify" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="ContactInfo" value="@Model.ContactInfo" />

            <div class="mb-6">
                <input name="OtpCode" type="text" maxlength="6" class="text-center text-2xl tracking-widest w-full border-b-2 border-gray-300 focus:border-amber-500 focus:outline-none py-2" placeholder="------" required />
                @if (ViewData.ModelState["OtpCode"]?.Errors.Count > 0)
                {
                    <span class="text-red-500 text-xs block mt-2">@ViewData.ModelState["OtpCode"]?.Errors[0].ErrorMessage</span>
                }
            </div>

            <button type="submit" class="w-full bg-amber-600 text-white py-2 rounded-md hover:bg-amber-700 transition font-bold">XÁC NHẬN</button>
        </form>
    </div>
</div>