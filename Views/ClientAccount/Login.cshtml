@model TraSuaFireFox.Models.ViewModels.LoginVM
@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8 bg-white p-8 rounded-xl shadow-lg">
        <div class="text-center">
            <h2 class="text-3xl font-extrabold text-amber-600">Đăng Nhập</h2>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="bg-green-100 text-green-700 p-3 rounded text-center text-sm">@TempData["Success"]</div>
        }

        <form class="mt-8 space-y-6" action="/ClientAccount/Login" method="POST">
            @Html.AntiForgeryToken()
            <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="text-red-500 text-sm text-center">@Html.ValidationSummary(false)</div>
            }

            <div class="rounded-md shadow-sm -space-y-px">
                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700">Email hoặc Số điện thoại</label>
                    <input name="Input" type="text" required class="appearance-none rounded relative block w-full px-3 py-2 border border-gray-300 text-gray-900 focus:outline-none focus:ring-amber-500 focus:border-amber-500 sm:text-sm">
                </div>
                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700">Mật khẩu</label>
                    <input name="Password" type="password" required class="appearance-none rounded relative block w-full px-3 py-2 border border-gray-300 text-gray-900 focus:outline-none focus:ring-amber-500 focus:border-amber-500 sm:text-sm">
                </div>
            </div>

            <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-amber-600 hover:bg-amber-700 focus:outline-none">
                Đăng Nhập
            </button>
            <div class="text-center text-sm mt-4">
                <a href="/ClientAccount/Register" class="font-medium text-amber-600 hover:text-amber-500">Chưa có tài khoản? Đăng ký ngay</a>
            </div>
        </form>
    </div>
</div>