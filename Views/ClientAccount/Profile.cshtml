@model TraSuaFireFox.Models.ViewModels.ProfileVM
@{
    ViewData["Title"] = "Hồ sơ cá nhân";
}

<div class="container mx-auto px-4 py-8 max-w-2xl">
    <h1 class="text-2xl font-bold text-gray-800 mb-6 border-b pb-2">Hồ Sơ Của Bạn</h1>

    @if (TempData["Success"] != null)
    {
        <div class="bg-green-100 text-green-700 p-3 rounded mb-4">@TempData["Success"]</div>
    }

    <form action="/ClientAccount/Profile" method="post" class="bg-white p-6 rounded-lg shadow-md">
        @Html.AntiForgeryToken()
        <input type="hidden" name="Makh" value="@Model.Makh" />

        <div class="grid grid-cols-1 gap-6">
            <div>
                <label class="block text-sm font-medium text-gray-700">Họ và Tên</label>
                <input type="text" name="Hoten" value="@Model.Hoten" class="mt-1 block w-full rounded-md border-gray-300 border p-2" required />
            </div>

            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700">Email</label>
                    <input type="text" value="@Model.Email" class="mt-1 block w-full bg-gray-100 rounded-md border-gray-300 border p-2 text-gray-500 cursor-not-allowed" readonly />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700">Số điện thoại</label>
                    <input type="text" value="@Model.Sdt" class="mt-1 block w-full bg-gray-100 rounded-md border-gray-300 border p-2 text-gray-500 cursor-not-allowed" readonly />
                </div>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700">Địa chỉ giao hàng mặc định</label>
                <input type="text" name="Diachi" value="@Model.Diachi" class="mt-1 block w-full rounded-md border-gray-300 border p-2" />
            </div>
        </div>

        <div class="mt-6 flex justify-end">
            <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700 transition font-bold">
                Cập Nhật Hồ Sơ
            </button>
        </div>
    </form>
</div>