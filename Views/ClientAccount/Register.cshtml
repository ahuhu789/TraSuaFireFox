@model TraSuaFireFox.Models.ViewModels.RegisterVM
@{
    ViewData["Title"] = "Đăng ký tài khoản";
}

<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8 bg-white p-8 rounded-xl shadow-lg">
        <div class="text-center">
            <h2 class="text-3xl font-extrabold text-amber-600">Đăng Ký Thành Viên</h2>
            <p class="mt-2 text-sm text-gray-600">Trở thành thành viên FireFox Tea để nhận ưu đãi</p>
        </div>
        <form class="mt-8 space-y-6" action="/ClientAccount/Register" method="POST">
            @Html.AntiForgeryToken()

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="bg-red-50 text-red-500 p-3 rounded text-sm border border-red-200">
                    @Html.ValidationSummary(false)
                </div>
            }

            <div class="rounded-md shadow-sm -space-y-px">
                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700">Họ và Tên</label>
                    <input name="Hoten" type="text" required class="appearance-none rounded relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-amber-500 focus:border-amber-500 focus:z-10 sm:text-sm" placeholder="Nguyễn Văn A">
                </div>
                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700">Email hoặc Số điện thoại</label>
                    <input name="ContactInfo" type="text" required class="appearance-none rounded relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-amber-500 focus:border-amber-500 focus:z-10 sm:text-sm" placeholder="example@gmail.com hoặc 0901234567">
                </div>
                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700">Mật khẩu</label>
                    <input name="Matkhau" type="password" required class="appearance-none rounded relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-amber-500 focus:border-amber-500 focus:z-10 sm:text-sm">
                </div>
                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700">Xác nhận mật khẩu</label>
                    <input name="XacNhanMatkhau" type="password" required class="appearance-none rounded relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-amber-500 focus:border-amber-500 focus:z-10 sm:text-sm">
                </div>
            </div>

            <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-amber-600 hover:bg-amber-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500">
                Đăng Ký Ngay
            </button>

            <div class="text-center text-sm">
                <a href="/ClientAccount/Login" class="font-medium text-amber-600 hover:text-amber-500">Đã có tài khoản? Đăng nhập</a>
            </div>
        </form>
    </div>
</div>