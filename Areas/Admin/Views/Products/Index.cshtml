@model IEnumerable<TraSuaFireFox.Models.Sanpham>

@{
    ViewData["Title"] = "Quản lý Sản Phẩm";
}

<div class="bg-white rounded-lg shadow-md overflow-hidden">
    <div class="p-6 flex justify-between items-center border-b border-gray-200">
        <h2 class="text-xl font-bold text-gray-800">Danh sách Trà Sữa</h2>
        <a href="@Url.Action("Create")" class="bg-amber-600 hover:bg-amber-700 text-white px-4 py-2 rounded-md transition flex items-center gap-2 shadow">
            <i class="fa-solid fa-plus"></i> Thêm Món Mới
        </a>
    </div>

    <div class="overflow-x-auto">
        <table class="w-full text-sm text-left text-gray-500">
            <thead class="text-xs text-gray-700 uppercase bg-amber-50">
                <tr>
                    <th class="px-6 py-3">Hình ảnh</th>
                    <th class="px-6 py-3">Tên món</th>
                    <th class="px-6 py-3">Danh mục</th>
                    <th class="px-6 py-3">Giá bán</th>
                    <th class="px-6 py-3">Trạng thái</th>
                    <th class="px-6 py-3 text-center">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="bg-white border-b hover:bg-gray-50 transition">
                        <td class="px-6 py-4">
                            @{
                                string imgPath = string.IsNullOrEmpty(item.Hinhanh) ? "default.jpg" : item.Hinhanh;
                            }
                            <img src="~/images/products/@imgPath" class="w-16 h-16 object-cover rounded-lg shadow-sm border border-gray-200" alt="@item.Tensp">
                        </td>
                        <td class="px-6 py-4 font-medium text-gray-900">@item.Tensp</td>
                        <td class="px-6 py-4">
                            <span class="bg-blue-100 text-blue-800 text-xs font-medium mr-2 px-2.5 py-0.5 rounded border border-blue-400">
                                @item.MadmNavigation?.Tendm
                            </span>
                        </td>
                        <td class="px-6 py-4 text-amber-600 font-bold">
                            @string.Format("{0:N0} đ", item.Dongia)
                        </td>
                        <td class="px-6 py-4">
                            @if (item.Trangthai == "Còn hàng")
                            {
                                <span class="text-green-600 font-medium"><i class="fa-solid fa-circle-check mr-1"></i> Còn hàng</span>
                            }
                            else
                            {
                                <span class="text-red-600 font-medium"><i class="fa-solid fa-circle-xmark mr-1"></i> @item.Trangthai</span>
                            }
                        </td>
                        <td class="px-6 py-4 text-center">
                            <div class="flex justify-center gap-2">
                                <a href="/Admin/Products/Edit/@item.Masp" class="text-blue-600 hover:text-blue-900" title="Sửa">
                                    <i class="fa-solid fa-pen-to-square text-lg"></i>
                                </a>
                                <form action="/Admin/Products/DeleteConfirmed" method="post" onsubmit="return confirm('Bạn có chắc chắn muốn xóa món @item.Tensp không?');" class="inline-block">
                                    @Html.AntiForgeryToken()

                                    <input type="hidden" name="id" value="@item.Masp" />

                                    <button type="submit" class="text-red-600 hover:text-red-900 transition" title="Xóa">
                                        <i class="fa-solid fa-trash-can text-lg"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>