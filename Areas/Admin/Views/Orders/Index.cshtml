@model IEnumerable<TraSuaFireFox.Models.Donhang>

@{
    ViewData["Title"] = "Quản lý Đơn Hàng";
}

<div class="bg-white rounded-lg shadow-md overflow-hidden">
    <div class="p-6 border-b border-gray-200">
        <h2 class="text-xl font-bold text-gray-800">Danh sách Đơn Hàng</h2>
    </div>

    <div class="overflow-x-auto">
        <table class="w-full text-sm text-left text-gray-500">
            <thead class="text-xs text-gray-700 uppercase bg-gray-100">
                <tr>
                    <th class="px-6 py-3">Mã ĐH</th>
                    <th class="px-6 py-3">Khách hàng</th>
                    <th class="px-6 py-3">Ngày đặt</th>
                    <th class="px-6 py-3">Trạng thái</th>
                    <th class="px-6 py-3">Giao tới</th>
                    <th class="px-6 py-3 text-center">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="bg-white border-b hover:bg-gray-50 transition">
                        <td class="px-6 py-4 font-bold text-blue-600">
                            @item.Madh
                        </td>
                        <td class="px-6 py-4">
                            <div class="font-medium text-gray-900">@item.MakhNavigation?.Hoten</div>
                            <div class="text-xs text-gray-500">SĐT: @item.Sdtgiaohang</div>
                        </td>
                        <td class="px-6 py-4">
                            @item.Ngaydathang?.ToString("dd/MM/yyyy")
                        </td>
                        <td class="px-6 py-4">
                            @if (item.Trangthaidh == "Đã giao")
                            {
                                <span class="bg-green-100 text-green-800 text-xs font-medium px-2.5 py-0.5 rounded">@item.Trangthaidh</span>
                            }
                            else if (item.Trangthaidh == "Đang giao")
                            {
                                <span class="bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded">@item.Trangthaidh</span>
                            }
                            else if (item.Trangthaidh == "Đã hủy")
                            {
                                <span class="bg-red-100 text-red-800 text-xs font-medium px-2.5 py-0.5 rounded">@item.Trangthaidh</span>
                            }
                            else
                            {
                                <span class="bg-yellow-100 text-yellow-800 text-xs font-medium px-2.5 py-0.5 rounded">@item.Trangthaidh</span>
                            }
                        </td>
                        <td class="px-6 py-4 truncate max-w-xs" title="@item.Diachigiaohang">
                            @item.Diachigiaohang
                        </td>
                        <td class="px-6 py-4 text-center">
                            <div class="flex justify-center gap-2">
                                <a href="@Url.Action("Details", "Orders", new { id = item.Madh })" class="text-gray-500 hover:text-gray-900" title="Xem chi tiết">
                                    <i class="fa-solid fa-eye text-lg"></i>
                                </a>
                                <a href="@Url.Action("Edit", "Orders", new { id = item.Madh })" class="text-blue-600 hover:text-blue-900" title="Cập nhật trạng thái">
                                    <i class="fa-solid fa-pen-to-square text-lg"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>