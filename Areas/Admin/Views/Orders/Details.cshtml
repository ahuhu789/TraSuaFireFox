@model TraSuaFireFox.Models.Donhang

@{
    ViewData["Title"] = "Chi tiết đơn hàng: " + Model.Madh;
    decimal tongTien = 0;
}

<div class="max-w-5xl mx-auto">
    <div class="bg-white rounded-lg shadow-md p-6 mb-6">
        <div class="flex justify-between items-start mb-6">
            <div>
                <h2 class="text-2xl font-bold text-gray-800 mb-1">Đơn hàng #@Model.Madh</h2>
                <p class="text-sm text-gray-500">Ngày đặt: @Model.Ngaydathang?.ToString("dd/MM/yyyy")</p>
            </div>
            <div class="text-right">
                <span class="bg-blue-100 text-blue-800 text-sm font-medium px-3 py-1 rounded">@Model.Trangthaidh</span>
                <div class="mt-2 text-sm text-gray-500">Nhân viên phụ trách: <span class="font-semibold">@Model.ManvNavigation?.Hoten</span></div>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 border-t pt-6">
            <div>
                <h3 class="text-sm font-bold text-gray-500 uppercase mb-2">Thông tin khách hàng</h3>
                <p class="font-semibold text-gray-800">@Model.MakhNavigation?.Hoten</p>
                <p class="text-gray-600">@Model.MakhNavigation?.Email</p>
                <p class="text-gray-600">@Model.MakhNavigation?.Sdt</p>
            </div>
            <div>
                <h3 class="text-sm font-bold text-gray-500 uppercase mb-2">Địa chỉ giao hàng</h3>
                <p class="text-gray-800">@Model.Diachigiaohang</p>
                <p class="text-gray-600 mt-1"><i class="fa-solid fa-phone text-xs mr-1"></i> @Model.Sdtgiaohang</p>
                <p class="text-gray-600 italic mt-2">"Ghi chú: @Model.Ghichu"</p>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <div class="p-4 bg-gray-50 border-b font-bold text-gray-700">Chi tiết sản phẩm</div>
        <table class="w-full text-sm text-left">
            <thead class="text-xs text-gray-500 uppercase bg-gray-50 border-b">
                <tr>
                    <th class="px-6 py-3">Món</th>
                    <th class="px-6 py-3 text-center">Số lượng</th>
                    <th class="px-6 py-3 text-right">Đơn giá</th>
                    <th class="px-6 py-3 text-right">Thành tiền</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Ctdonhangs)
                {
                    <tr class="bg-white border-b">
                        <td class="px-6 py-4 font-medium text-gray-900">
                            @item.MaspNavigation?.Tensp
                        </td>
                        <td class="px-6 py-4 text-center">@item.Soluong</td>
                        <td class="px-6 py-4 text-right">@string.Format("{0:N0} đ", item.Dongia)</td>
                        <td class="px-6 py-4 text-right font-bold text-gray-800">
                            @string.Format("{0:N0} đ", item.Thanhtien)
                        </td>
                    </tr>
                    // Cộng dồn tổng tiền (Cần xử lý null để tránh lỗi)
                    tongTien += item.Thanhtien ?? 0;
                }
            </tbody>
            <tfoot class="bg-gray-50">
                <tr>
                    <td colspan="3" class="px-6 py-4 text-right font-bold text-gray-700 text-lg">TỔNG CỘNG:</td>
                    <td class="px-6 py-4 text-right font-bold text-red-600 text-xl">
                        @string.Format("{0:N0} đ", tongTien)
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>

    <div class="mt-6 flex justify-end gap-3">
        <a href="@Url.Action("Index")" class="bg-gray-200 text-gray-700 px-4 py-2 rounded hover:bg-gray-300 transition font-medium">
            <i class="fa-solid fa-arrow-left mr-1"></i> Quay lại
        </a>
        <a href="@Url.Action("Edit", new { id = Model.Madh })" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition font-medium shadow">
            <i class="fa-solid fa-pen-to-square mr-1"></i> Cập nhật trạng thái
        </a>
    </div>
</div>