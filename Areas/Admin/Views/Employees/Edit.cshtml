@model TraSuaFireFox.Models.Nhanvien
@{
    ViewData["Title"] = "Cập nhật: " + Model.Hoten;
}

<div class="max-w-4xl mx-auto bg-white rounded-lg shadow-lg p-8">
    <h2 class="text-2xl font-bold text-blue-600 mb-6 flex items-center gap-2">
        <i class="fa-solid fa-user-pen"></i> Cập Nhật Nhân Viên
    </h2>

    <form action="@Url.Action("Edit", "Employees", new { area = "Admin", id = Model.Manv })" method="post">
        @Html.AntiForgeryToken()

        <input type="hidden" name="Manv" value="@Model.Manv" />

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700">Mã Nhân Viên</label>
                    <input type="text" value="@Model.Manv" class="mt-1 block w-full rounded-md border-gray-300 bg-gray-100 border p-2 cursor-not-allowed" readonly />
                </div>

                <div>
                    <label for="Hoten" class="block text-sm font-medium text-gray-700">Họ và Tên</label>
                    <input type="text" id="Hoten" name="Hoten" value="@Model.Hoten" class="mt-1 block w-full rounded-md border-gray-300 border p-2" required />
                </div>

                <div>
                    <label for="Email" class="block text-sm font-medium text-gray-700">Email</label>
                    <input type="email" id="Email" name="Email" value="@Model.Email" class="mt-1 block w-full rounded-md border-gray-300 border p-2" required />
                </div>

                <div>
                    <label for="Matkhau" class="block text-sm font-medium text-gray-700">Mật khẩu</label>
                    <input type="text" id="Matkhau" name="Matkhau" value="@Model.Matkhau" class="mt-1 block w-full rounded-md border-gray-300 border p-2" />
                </div>
            </div>

            <div class="space-y-4">
                <div>
                    <label for="Sdt" class="block text-sm font-medium text-gray-700">Số điện thoại</label>
                    <input type="text" id="Sdt" name="Sdt" value="@Model.Sdt" class="mt-1 block w-full rounded-md border-gray-300 border p-2" />
                </div>

                <div>
                    <label for="Chucvu" class="block text-sm font-medium text-gray-700">Chức vụ</label>
                    <select id="Chucvu" name="Chucvu" class="mt-1 block w-full rounded-md border-gray-300 border p-2">
                        <!option value="Nhân viên" @(Model.Chucvu == "Nhân viên" ? "selected" : "")>Nhân viên</!option>
                        <!option value="Thu ngân" @(Model.Chucvu == "Thu ngân" ? "selected" : "")>Thu ngân</!option>
                        <!option value="Pha chế" @(Model.Chucvu == "Pha chế" ? "selected" : "")>Pha chế</!option>
                        <!option value="Quản lý" @(Model.Chucvu == "Quản lý" ? "selected" : "")>Quản lý</!option>
                    </select>
                </div>

                <div>
                    <label for="Luongcoban" class="block text-sm font-medium text-gray-700">Lương cơ bản</label>
                    <input type="number" id="Luongcoban" name="Luongcoban" value="@Model.Luongcoban" class="mt-1 block w-full rounded-md border-gray-300 border p-2" />
                </div>

                <div>
                    <label for="Trangthai" class="block text-sm font-medium text-gray-700">Trạng thái</label>
                    <select id="Trangthai" name="Trangthai" class="mt-1 block w-full rounded-md border-gray-300 border p-2">
                        <!option value="Đang làm" @(Model.Trangthai == "Đang làm" ? "selected" : "")>Đang làm</!option>
                        <!option value="Nghỉ việc" @(Model.Trangthai == "Nghỉ việc" ? "selected" : "")>Nghỉ việc</!option>
                        <!option value="Tạm khóa" @(Model.Trangthai == "Tạm khóa" ? "selected" : "")>Tạm khóa</!option>
                    </select>
                </div>
            </div>
        </div>

        <div class="mt-4 grid grid-cols-2 gap-6">
            <div>
                <label for="Diachi" class="block text-sm font-medium text-gray-700">Địa chỉ</label>
                <input type="text" id="Diachi" name="Diachi" value="@Model.Diachi" class="mt-1 block w-full rounded-md border-gray-300 border p-2" />
            </div>
            <div>
                <label for="Ngayvaolam" class="block text-sm font-medium text-gray-700">Ngày vào làm</label>
                <input type="date" id="Ngayvaolam" name="Ngayvaolam" value="@Model.Ngayvaolam?.ToString("yyyy-MM-dd")" class="mt-1 block w-full rounded-md border-gray-300 border p-2" />
            </div>
        </div>

        <div class="mt-8 flex justify-end gap-3">
            <a href="@Url.Action("Index")" class="bg-gray-200 text-gray-700 px-4 py-2 rounded hover:bg-gray-300 transition">Hủy bỏ</a>
            <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700 transition shadow-lg font-bold">
                <i class="fa-solid fa-floppy-disk mr-1"></i> Cập Nhật
            </button>
        </div>
    </form>
</div>