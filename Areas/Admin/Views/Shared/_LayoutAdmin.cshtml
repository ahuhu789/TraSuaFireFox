<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin TraSuaFireFox</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <style>
        input[type=number]::-webkit-inner-spin-button,
        input[type=number]::-webkit-outer-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }
        
        .nav-item.active {
            background-color: #fef3c7;
            color: #d97706;
            border-right: 4px solid #d97706;
        }
    </style>
</head>
<body class="bg-gray-100 font-sans antialiased">

    <div class="flex h-screen overflow-hidden">
        <aside class="w-64 bg-white border-r border-gray-200 flex-shrink-0 hidden md:flex flex-col">
            <div class="h-16 flex items-center justify-center border-b border-gray-200">
                <a href="/Admin/Home" class="flex items-center gap-2 font-bold text-2xl text-amber-600">
                    <i class="fa-solid fa-fire-flame-curved"></i> Admin Dashboard
                </a>
            </div>

            <nav class="flex-1 overflow-y-auto py-4">
                <ul class="space-y-1">
                    <li>
                        <a href="/Admin/Home" class="flex items-center px-6 py-3 text-gray-600 hover:bg-amber-50 hover:text-amber-600 transition nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active" : "")">
                            <i class="fa-solid fa-chart-line w-6"></i> Dashboard
                        </a>
                    </li>
                    <li>
                        <a href="/Admin/Products" class="flex items-center px-6 py-3 text-gray-600 hover:bg-amber-50 hover:text-amber-600 transition nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Sanphams" ? "active" : "")">
                            <i class="fa-solid fa-mug-hot w-6"></i> Quản lý Sản phẩm
                        </a>
                    </li>
                    <li>
                        <a href="/Admin/Orders" class="flex items-center px-6 py-3 text-gray-600 hover:bg-amber-50 hover:text-amber-600 transition nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Donhangs" ? "active" : "")">
                            <i class="fa-solid fa-receipt w-6"></i> Quản lý Đơn hàng
                        </a>
                    </li>
                    <li>
                        <a href="/Admin/Employees" class="flex items-center px-6 py-3 text-gray-600 hover:bg-amber-50 hover:text-amber-600 transition nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Nhanviens" ? "active" : "")">
                            <i class="fa-solid fa-users w-6"></i> Quản lý Nhân viên
                        </a>
                    </li>
                </ul>
            </nav>

            <div class="p-4 border-t border-gray-200">
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-full bg-amber-100 flex items-center justify-center text-amber-600 font-bold">
                        @User.Identity.Name?.Substring(0, 1)
                    </div>
                    <div>
                        <p class="text-sm font-medium text-gray-700">@User.Identity.Name</p>
                        <p class="text-xs text-gray-500">Quản trị viên</p>
                    </div>
                </div>
            </div>
        </aside>

        <div class="flex-1 flex flex-col overflow-hidden">
            <header class="h-16 bg-white border-b border-gray-200 flex items-center justify-between px-6">
                <h2 class="text-xl font-semibold text-gray-800">@ViewData["Title"]</h2>

                <div class="flex items-center gap-4">
                    <a href="/" class="text-sm text-gray-500 hover:text-amber-600">Về trang chủ</a>
                    @using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <button type="submit" class="text-sm font-medium text-red-600 hover:text-red-800">Đăng xuất</button>
                    }
                </div>
            </header>

            <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-100 p-6">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div id="success-alert" class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4 shadow-md" role="alert">
                        <div class="flex items-center">
                            <i class="fa-solid fa-circle-check text-xl mr-3"></i>
                            <span class="font-medium text-sm">@TempData["SuccessMessage"]</span>
                        </div>
                        <button type="button" class="absolute top-0 bottom-0 right-0 px-4 py-3" onclick="document.getElementById('success-alert').style.display='none'">
                            <i class="fa-solid fa-xmark text-sm"></i>
                        </button>
                    </div>
                }
                @RenderBody()
            </main>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>